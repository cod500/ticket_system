<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald&family=Roboto+Condensed&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="icon" type="image/x-icon" href="/img/ticket.png" />
    <title>Trouble Ticket Management</title>
  </head>
  <body>
    <div class="container">
      <div class="banner">
        <div class="banner-img">
          <img src="/img/ticket.png" alt="" />
        </div>
        <h1>Trouble Ticket Management System</h1>
      </div>

      <div class="msg-container">
        <% if (errors) { %> <% errors.forEach(function(error) { %>
        <p class="success-msg"><%= error.msg%></p>
        <% }); %> <% } %> <% if (error) { %>
        <p class="success-msg"><%= error%></p>
        <% } %>
      </div>

      <div class="form-container">
        <form action="/user/login" method="POST" class="log-in-form">
          <h2>Secure Access Login</h2>
          <input
            type="email"
            name="username"
            class="form-input"
            placeholder="EMAIL"
            value=""
          />
          <input
            type="password"
            name="password"
            class="form-input"
            placeholder="PASSWORD"
            value=""
          />
          <input type="submit" value="Log in" />

          <div class="demo-btn">
            <a href="/home">View Tickets Without registering</a>
          </div>

          <div class="register-btn" id="flip-log-form">
            <i class="fa fa-arrow-right" aria-hidden="true"></i> Register
            Employee
          </div>
        </form>

        <form action="/user/register" method="POST" class="register-form">
          <h2>Register Employee</h2>
          <input
            type="email"
            name="username"
            class="form-input"
            placeholder="EMAIL"
            value=""
          />
          <input
            type="password"
            name="password"
            class="form-input"
            placeholder="PASSWORD"
            value=""
          />
          <input
            type="password"
            name="confirm"
            class="form-input"
            placeholder="CONFIRM PASSWORD"
            value=""
          />
          <input type="submit" value="Register" />
          <div class="register-btn" id="flip-register-form">
            <i class="fa fa-arrow-right" aria-hidden="true"></i> Log in
          </div>
        </form>
      </div>
    </div>
    <footer class="footer">
      <ul>
        <li class="li">Home</li>
        <li class="li">Contact</li>
        <li class="li">Security</li>
        <li class="li">Complaints</li>
        <li class="li">Anti-spam Policy</li>
        <li class="li">Terms of Service</li>
        <li class="li">Privacy Policy</li>
        <li class="li">Cookie Policy</li>
        <li class="li">Compliance</li>
        <li class="li">Abuse Policy</li>
      </ul>
      <p>&copy; 2020 All Rights Reserved.</p>
    </footer>
    <script src="/js/app.js"></script>
  </body>
</html>
